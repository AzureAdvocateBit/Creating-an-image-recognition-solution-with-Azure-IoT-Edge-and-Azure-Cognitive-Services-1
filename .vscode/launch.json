    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: CameraCaptureOpenCV Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "rpi3bplus.local",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/modules/CameraCaptureOpenCV/app",
                    "remoteRoot": "/app/."
                }
            ]
        },
        {
            "name": "Python: Image Classifier Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5679,
            "host": "rpi3bplus.local",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/modules/ImageClassifierService/app",
                    "remoteRoot": "/app/."
                }
            ]
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "port": 5679,
            "host": "rpi3bplus.local",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}